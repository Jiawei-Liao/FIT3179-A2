{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Score by Country (2015 - 2019)",
  "width": "container",
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Score_type",
      "value": "Happiness Score",
      "bind": {
        "input": "select",
        "options": [
          "Happiness Score",
          "Economy",
          "Family",
          "Health",
          "Freedom",
          "Government",
          "Generosity"
        ],
        "labels": [
          "Happiness Score",
          "Economy Score",
          "Family Score",
          "Health Score",
          "Freedom Score",
          "Government Score",
          "Generosity Score"
        ],
        "name": "Score Type: "
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "js/maps/map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "data/happiness_data.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "js/maps/map.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == Year_selection && datum.Type == Score_type"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "stroke": "white",
            "strokeWidth": 0.5
          },
          "encoding": {
            "shape": {
              "field": "geo",
              "type": "geojson"
            },
            "color": {
              "field": "Score",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "scheme": "greens",
                "nice": true
              },
              "legend": {
                "title": "Score"
              }
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Score",
                "type": "quantitative",
                "title": "Score"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "window": [{"op": "rank", "as": "ranking"}],
              "sort": [{"field": "Score", "order": "descending"}]
            },
            {"filter": "datum.ranking == 1"},
            {
              "calculate": "'The highest scoring country is; ' + datum.Country + ' with a score of ' + datum.Score",
              "as": "annotation_raw"
            },
            {
              "calculate": "split(datum.annotation_raw, ';')",
              "as": "annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 4,
            "dy": -4
          },
          "encoding": {"text": {"field": "annotation", "type": "nominal"}}
        }
      ]
    }
  ]
}
