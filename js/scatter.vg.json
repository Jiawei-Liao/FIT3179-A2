  {
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness vs Economy",
  "width": 220,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "data/happiness_economy.csv"
  },
  "transform": [
    {
      "filter": "datum.Year == Year_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Economy",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [0, 2.1],
        "nice": true
      }
    },
    "y": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"zero": false}
    },
    "color": {
      "field": "Region", 
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#B87333",
          "#5A2E06",
          "#4682B4",
          "#228B22",
          "#D62828",
          "#9932CC"
        ]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Region", "type": "nominal"},
      {"field": "Happiness Score", "type": "quantitative", "format": ".2f"},
      {"field": "Economy", "type": "quantitative", "format": ".2f", "title": "Economy Score"}
    ]
  },
  "layer": [
    {
      "mark": "circle"
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -3,
        "fontStyle": "italic",
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "size": {
          "condition": {
            "test": "datum.Country == 'Australia' || datum.Country == 'United States of America'",
            "value": 11
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "legend": {
      "orient": "top",
      "columns": 3,
      "labelFontSize": 9
    }
  }
}