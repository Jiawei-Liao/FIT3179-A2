{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Regional Happiness Scores",
    "width": 210,
    "data": {"url": "data/happiness_region_year.csv"},
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
        "x": {
            "timeUnit": "year", 
            "field": "Year",
            "title": "Year"
        },
        "y": {
            "field": "Happiness Score", 
            "type": "quantitative",
            "scale": {"zero": false}
        },
        "color": {
            "field": "Region", 
            "type": "nominal",
            "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#B87333",
                  "#5A2E06",
                  "#4682B4",
                  "#228B22",
                  "#D62828",
                  "#9932CC"
                ]
              }
        },
        "tooltip": [
            {"field": "Region", "type": "nominal"},
            {"field": "Happiness Score", "type": "quantitative", "format": ".2f"}
        ]
    },
    "config": {
        "legend": {
            "orient": "top",
            "columns": 3,
            "labelFontSize": 9
        }
    }
}
  